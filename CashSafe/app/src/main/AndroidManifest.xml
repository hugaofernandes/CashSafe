<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cashsafe.cashsafe" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".atividades.PrincipalActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".atividades.ReceitaActivity"
            android:label="@string/title_activity_receita"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.DespesaActivity"
            android:label="@string/title_activity_despesa"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.DespesasCategoriaActivity"
            android:label="@string/title_activity_despesas_categoria"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.ReceitaCategoriaActivity"
            android:label="@string/title_activity_receita_categoria"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.BalancoActivity"
            android:label="@string/title_activity_balanco"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.BalancoMensalActivity"
            android:label="@string/title_activity_balanco_mensal"
            android:parentActivityName=".atividades.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".atividades.PrincipalActivity" />
        </activity>
        <activity
            android:name=".atividades.EditarReceitaActivity"
            android:label="@string/title_activity_editar_receita" >
        </activity>
        <activity
            android:name=".atividades.EditarDespesaActivity"
            android:label="@string/title_activity_editar_despesa" >
        </activity>
    </application>

</manifest>
